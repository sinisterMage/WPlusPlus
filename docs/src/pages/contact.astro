---
import Layout from "../layouts/Layout.astro";
import ContactFormLoader from "../components/ContactFormLoader.tsx";
---

<Layout title="Contact W++" description="Contact the W++ team for questions, support, and sloth memes. Built for chaos, learning, and love.">
  <div class="contact-page">
    <h1>üì® Contact the W++ Team</h1>
    <p class="page-subtitle">
      We're happy to hear your thoughts, bugs, memes, or existential crises ü¶•
    </p>

    <!-- Links Section -->
    <div class="contact-links">
      <p>üí¨ <a href="https://discord.gg/a37hQPPDrp" target="_blank" rel="noopener noreferrer">Join the Discord</a></p>
      <p>üêô <a href="https://github.com/sinisterMage/WPlusPlus" target="_blank" rel="noopener noreferrer">Visit GitHub</a></p>
      <p>‚úâÔ∏è <a href="mailto:ofek@wplusplus.org">Email Me</a></p>
    </div>

    <!-- Divider -->
    <hr class="divider" />

    <!-- Contact Form -->
    <form id="contact-form">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" placeholder="Jane Developer" required />

      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="you@example.com" required />

      <label for="message">Message</label>
      <textarea id="message" name="message" rows="5" placeholder="Type your W++ questions here..." required></textarea>

      <!-- üîê Google reCAPTCHA v2 widget -->
      <div class="g-recaptcha" data-sitekey="6Le4y5crAAAAAA4WZ0lVa-ZcUdUpzNVEOdatzaCB"></div>

      <button type="submit">Send</button>
      <p id="form-status" class="form-status"></p>
    </form>
  </div>

  <ContactFormLoader client:only="react" />
</Layout>


<style>
  .contact-page {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
    background: #2c2c2c;
    border-radius: 12px;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.3);
  }

  h1 {
    text-align: center;
    margin-bottom: 0.5rem;
    color: #ffa500;
    font-size: 2.5rem;
  }

  .page-subtitle {
    text-align: center;
    color: #ccc;
    font-size: 1rem;
    margin-bottom: 2rem;
  }

  label {
    color: #ffa500;
    display: block;
    margin-top: 1rem;
    font-weight: bold;
  }

  input,
  textarea {
    width: 100%;
    padding: 0.75rem;
    margin-top: 0.5rem;
    background: #1e1e1e;
    border: 1px solid #444;
    border-radius: 6px;
    color: white;
    resize: vertical;
    font-size: 1rem;
  }

  input:invalid,
  textarea:invalid {
    border: 1px solid #ff4d4d;
    animation: shake 0.2s ease-in-out 0s 2;
  }

  input:invalid:focus,
  textarea:invalid:focus {
    outline: none;
    animation: none;
  }

  @keyframes shake {
    0% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    50% { transform: translateX(5px); }
    75% { transform: translateX(-5px); }
    100% { transform: translateX(0); }
  }

  button {
    margin-top: 1.5rem;
    background: #ffa500;
    color: #111;
    padding: 0.75rem 1.5rem;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    width: 100%;
    transition: background 0.2s ease;
    font-size: 1.1rem;
  }

  button:hover {
    background: #ff8c00;
  }

  .form-status {
    margin-top: 1rem;
    color: #ccc;
    text-align: center;
  }

  .g-recaptcha {
    margin-top: 1rem;
    transform: scale(1);
    transform-origin: 0 0;
  }

  @media (max-width: 480px) {
    .contact-page {
      padding: 1rem;
    }

    input,
    textarea {
      font-size: 0.95rem;
    }

    button {
      padding: 0.65rem;
      font-size: 1rem;
    }

    .g-recaptcha {
      transform: scale(0.85);
      transform-origin: 0 0;
    }
  }
  .contact-links {
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }
  .contact-links a {
    color: #ffa500;
    font-weight: bold;
    text-decoration: none;
  }
  .contact-links a:hover {
    text-decoration: underline;
  }
  .divider {
    margin: 2rem 0;
    border: none;
    border-top: 1px solid #444;
  }
</style>

{
  "name": "wplusplus",
  "displayName": "W++",
  "description": "W++ language support with syntax highlighting, code completion, and error diagnostics",
  "version": "0.1.0",
  "publisher": "wlothIndustries",
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "wpp",
        "aliases": [
          "W++",
          "wpp"
        ],
        "extensions": [
          ".wpp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wpp",
        "scopeName": "source.wpp",
        "path": "./syntaxes/wpp.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "wpp.run",
        "title": "Run W++ File with Ingot"
      }
    ],
    "snippets": [
      {
        "language": "wpp",
        "path": "./snippets/wpp.code-snippets"
      }
    ],
    "iconThemes": [
      {
        "id": "wpp-theme",
        "label": "W++ Icon Theme",
        "path": "./file-icon-theme.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:wpp",
    "onCommand:wpp.run"
  ],
  "main": "./extension.js",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.x"
  },
  "author": "Ofek Bickel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinisterMage/WPlusPlus"
  },
  "homepage": "https://wplusplus.org",
  "bugs": {
    "url": "https://github.com/sinisterMage/WPlusPlus/issues"
  },
  "keywords": [
    "wplusplus",
    "wpp",
    "language",
    "custom",
    "syntax",
    "highlighting",
    "experimental"
  ]
}

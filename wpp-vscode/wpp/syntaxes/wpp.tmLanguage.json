{
  "scopeName": "source.wpp",
  "name": "W++",
  "patterns": [
    { "name": "comment.line.double-slash.wpp", "match": "//.*$" },

    { "name": "keyword.control.wpp", "match": "\\b(if|else|while|for|return|break|continue|import|export|from|switch|case|default|await|async|let|const|entity|alters|me|new|try|catch|throw|finally|funcy|func|type|true|false)\\b" },

    { "name": "string.quoted.double.wpp", "begin": "\"", "end": "\"", "patterns": [{ "match": "\\\\.", "name": "constant.character.escape.wpp" }] },

    { "name": "constant.numeric.wpp", "match": "\\b\\d+(\\.\\d+)?\\b" },

    {
      "name": "keyword.operator.wpp",
      "match": "==|!=|<=|>=|&&|\\|\\||\\?\\?|\\?|:|=>|\\+|\\-|\\*|\\/|=|<|>|!"
    },

    { "name": "punctuation.brackets.wpp", "match": "[\\{\\}\\(\\)\\[\\];,:\\.]" },

    { "name": "variable.wpp", "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b" }
  ],
  "fileTypes": ["wpp"],
  "uuid": "b1234567-0000-0000-0000-000000000000"
}
